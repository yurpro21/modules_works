<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_whatsapp_conversation_stage_search" model="ir.ui.view">
        <field name="name">Stage - Search</field>
        <field name="model">acrux.chat.conversation.stage</field>
        <field name="arch" type="xml">
            <search string="Stage Search">
                <field name="name"/>
                <field name="sequence"/>
            </search>
        </field>
    </record>

    <!-- STAGES TREE VIEW + MUTI_EDIT -->
    <record id="view_whatsapp_conversation_stage_tree" model="ir.ui.view">
        <field name="name">acrux.chat.conversation.stage.tree</field>
        <field name="model">acrux.chat.conversation.stage</field>
        <field name="arch" type="xml">
            <tree string="Chat Funnels" multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="name" readonly="1"/>
                <field name="fold" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_whatsapp_conversation_stage_form" model="ir.ui.view">
        <field name="name">acrux.chat.conversation.stage.form</field>
        <field name="model">acrux.chat.conversation.stage</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Chat Funnel">
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fold"/>
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="requirements" nolabel="1" placeholder="Give your team the requirements to move a chat to this stage."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_whatsapp_conversation_stage_action" model="ir.actions.act_window">
        <field name="name">Chat Funnels</field>
        <field name="res_model">acrux.chat.conversation.stage</field>
        <field name="view_id" ref="view_whatsapp_conversation_stage_tree"/>
    </record>

</odoo>
