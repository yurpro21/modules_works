            <field name="name">GPT 3.5 Text Davinci 003</field>
            <field name="operation_id" ref="data_config_operation_completation" />
        </record>
        <!-- todo: delete -->
        <record id="data_config_operation_compl_2" model="acrux.chat.ai.config.model">
